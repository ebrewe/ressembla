{
  "manifest_version": 2,
  "name": "Assemblist",
  "description": "This extension provides a permanent list of your open and followed Assembla tickets to your browser",
  "version": "1.0.0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the extension window"
    }
  },
  "permissions": [
    "activeTab",
    "https://www.assembla.com/",
    "storage"
  ]
}
